.tips-text {
    position: fixed;
    top: 18rpx;
    right: 40rpx;
    z-index: 9999;
    background: rgba(33,33,33,0.7);
    font-size: 35rpx;
    color: #ffffff;
    padding: 10rpx 15px;
    border-radius: 50rpx;
}

.tips-text::after {
    content: '';
    position: absolute;
    top: -37rpx;
    left: 220rpx;
    border: 20rpx solid transparent;
    border-bottom-color: rgba(33,33,33,.7);
}

.tips-text text:nth-of-type(1) {
    font-size: 30rpx;
}

.tips-text text:nth-of-type(2) {
    margin: 0 10rpx;
}