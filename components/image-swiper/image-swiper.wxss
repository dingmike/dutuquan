.image-swiper {
    height: 65vh;
    background: #555;
}

.image-swiper-item {
    padding: 1vh 0;
}

.image-swiper-img {
    width: 100%;
    height: 60vh;
}

.image-swiper-img image {
    width: 100%;
    height: 100%;
}

.image-swiper-count {
    padding-right: 15rpx;
    margin-top: -3.5vh;
    margin-bottom: 1vh;
    color: #fff;
    font-size: 26rpx;
    text-align: right;
}

.image-swiper-indicator {
    padding: 5rpx 0 0;
}

.image-swiper-indicator view {
    width: 0;
    height: 100%;
    background: #ccc;
    transition: width .2s ease;
}

.image-swiper-text {
    padding: 0 0 20rpx;
    margin: 0 20rpx 10rpx;
    border-bottom: 1px solid #eee;
    font-size: 32rpx;
    line-height: 1.6;
}