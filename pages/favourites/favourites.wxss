.favourites-wrap {
    padding: 25rpx 0 100rpx;
}

.favourites-list {
    padding: 25rpx 0 0 0;
    background: rgb(242,242,242);
    overflow: hidden;
}

.favourites-link {
    position: relative;
    height: 25vh;
    margin-bottom: 25rpx;
    overflow: hidden;
}

.favourites-link navigator {
    display: flex;
    height: 100%;
    background: #fff;
}

.favourites-link image {
    flex-basis: 45%;
    width: 45%;
}

.favourites-link .info {
    position: relative;
    flex-basis: 55%;
    padding: 15rpx 15rpx;
    font-size: 40rpx;
    font-weight: 600;
    line-height: 1.4;
    box-sizing: border-box;
}

.favourites-link .info .title {
    display: block;
    max-height: 112rpx;
    overflow: hidden;
}

.favourites-link .info .time {
    position: absolute;
    bottom: 10rpx;
    left: 10rpx;
    font-size: 28rpx;
    font-weight: 500;
}

.favourites-link .info .save-time {
    bottom: 50rpx;
    left: 10rpx;
    display: block;
    width: 100%;
    padding-top: 5rpx;
    margin-top: 5rpx;
    border-top: 1px solid #999;
    color: #999;
    font-size: 28rpx;
    font-weight: 500;
}

.favourites-btn {
    display: flex;
    position: absolute;
    right: 15rpx;
    bottom: 10rpx;
    width: 50%;
}

.favourites-btn>view {
    width: 50%;
    padding: 10rpx;
}

.favourites-btn text {
    padding: 5rpx 0;
    display: block;
    border: 5rpx solid transparent;
    border-radius: 10rpx;
    box-sizing: border-box;
    text-align: center;
    font-size: 40rpx;
    line-height: 1;
}

.favourites-btn .share text {
    border-color: #ee5253;
    color: #ee5253;
    font-weight: 600;
}

.favourites-btn .delete text {
    border-color: #ccc;
    color: #ccc;
}

.nofav {
    padding-bottom: 15rpx;
    font-size: 40rpx;
    text-align: center;
}

.favourites-btn button {
    display: block;
    width: 100%;
    height: 100%;
    padding: 0;
    background: transparent;
    line-height: 1;
}

.favourites-btn button::after {
    display: none;
}